<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>{{ tabTitle }}</title>
    <link rel="stylesheet" href="/public/css/styles.min.css">
</head>

<body>
    <h1 class="text-center mt-3">{{ pageTitle }}</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="row justify-content-between mb-3 mt-3">

                    {{#each projectList}}
                    <div class="card col-lg-4 col-md-6" id="product-1">
                        <div class="card-body">
                            <h2 class="card-title">{{this.title}}</h2>
                            <p class="card-text">{{this.technologies}}</p>
                            <p class="card-text">{{this.link}}</p>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#product-1-modal">
                                More Info
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="product-1-modal" tabindex="-1" role="dialog" aria-labelledby="product-1-title" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2 class="modal-title" id="product-1-title">More Info</h2>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            {{this.description}}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    
                </div>
            </div>
        </div>
    </div>

    <script src="/public/js/vendor.min.js">
    </script>
</body>

</html>